{
    "name": "optimust/optimust",
    "description": "Optimust Software",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "bjeavons/zxcvbn-php": "^1.3",
        "crunzphp/crunz": "^3.7",
        "doctrine/annotations": "^2.0",
        "doctrine/common": "^3.4",
        "doctrine/orm": "^3.2",
        "guzzlehttp/guzzle": "^7.8",
        "respect/validation": "^2.3",
        "symfony/cache": "7.1.*",
        "symfony/console": "7.1.*",
        "symfony/dotenv": "7.1.*",
        "symfony/error-handler": "7.1.*",
        "symfony/event-dispatcher": "7.1.*",
        "symfony/flex": "^2",
        "symfony/http-foundation": "7.1.*",
        "symfony/http-kernel": "7.1.*",
        "symfony/ldap": "7.1.*",
        "symfony/mailer": "7.1.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/process": "7.1.*",
        "symfony/routing": "7.1.*",
        "symfony/runtime": "7.1.*",
        "symfony/security-csrf": "7.1.*",
        "symfony/yaml": "7.1.*",
        "twig/twig": "^3.10"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Optimust\\ORM\\": "./lib/orm",
            "Optimust\\Framework\\": "./lib/framework",
            "Optimust\\Config\\": "./lib/config",
            "Optimust\\Admin\\": "./modules/optimustAdminModule",
            "Optimust\\Authentication\\": "./modules/optimustAuthenticationModule",
            "Optimust\\Core\\": "./modules/optimustCoreModule",
            "Optimust\\Entity\\": [
                "./modules/optimustAdminModule/entity",
                "./modules/optimustCoreModule/entity",
                "./modules/optimustAuthenticationModule/entity"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {

        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-autoload-dump": [
            "php ../bin/console orm:generate-proxies",
            "php ../bin/console cache:clear"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.1.*"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "zircote/swagger-php": "^4.10"
    }
}
